<div class='container-fluid login-bg'>
  <div class='row align-items-center p-3'>
    <div class='col-md-6 p-5'>
      <%=
        image_tag('Horizontal_color.png',
        :width => '70%',
        :alt => 'Logo',
        :class => 'mx-auto me-5 d-block')
      %>
    </div>
    <div class='col-md-6 p-5'>
      <h4 class='mb-4'>Ingrese a su cuenta</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <div class='field'>
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', :class => 'login-input my-2', :placeholder => 'Ingresar correo' %>
          </div>
          <div class='field'>
            <%= f.label :password, 'Contraseña' %><br/>
            <%= f.password_field :password, autocomplete: 'current-password', :class => 'login-input my-2', :placeholder => 'Ingresar contraseña' %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class='field'>
              <%= f.check_box :remember_me, :class => 'my-2' %>
              <%= f.label :remember_me, 'Recordarme' %>
            </div>
          <% end %>
          <div class='actions'>
            <%= f.submit 'Entrar', :class => 'btn login-btn my-2' %>
          </div>
        </div>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>