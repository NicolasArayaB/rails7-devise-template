<div class='container-fluid login-bg'>
  <div class='row align-items-center p-3 mt-5'>
    <div class='col-md-6'>
      <%=
        image_tag('Horizontal_color.png',
        :width => '70%',
        :alt => 'Logo',
        :class => 'mx-auto me-5 d-block')
      %>
    </div>

    <div class='col-md-6 px-5'>
      <h2>Registrar</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>

        <div class='field my-3'>
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, required: true, autocomplete: 'email', :class => 'login-input my-2', :placeholder => 'Ingresar correo' %>
        </div>

        <div class='field'>
          <%= f.label :first_name, 'Nombre' %><br />
          <%= f.text_field :first_name, autocomplete: 'first_name', required: true, :class => 'login-input my-2', :placeholder => 'Ingresar nombre' %>
        </div>

        <div class='field'>
          <%= f.label :last_name, 'Apellido' %><br />
          <%= f.text_field :last_name, autocomplete: 'last_name', required: true, :class => 'login-input my-2', :placeholder => 'Ingresar apellido' %>
        </div>

        <%# <div class='field'> %>
          <%#= f.label :role, 'Cargo' %>
          <%#= f.collection_select(:role, User::ROLES, :to_s, lambda{|i| i.to_s.humanize}) %>
        <%# </div>  %>

        <div class='field'>
          <%= f.label :password, 'Contrase単a' %>
          <% if @minimum_password_length %>
            <em>(Minimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          
          <%= f.password_field :password, autocomplete: 'new-password', required: true, :class => 'login-input my-2', :placeholder => 'Ingresar contrase単a' %>
        </div>

        <div class='field'>
          <%= f.label :password_confirmation, 'Confirmar contrase単a' %><br />
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', required: true, :class => 'login-input my-2', :placeholder => 'Re-ingresar contrase単a' %>
        </div>

        <div class='actions'>
          <%= f.submit 'Registrar', :class => 'btn login-btn my-2' %>
        </div>
      <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>